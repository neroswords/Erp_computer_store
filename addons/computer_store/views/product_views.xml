<odoo>
  <data>
     explicit list view definition 

    <record model="ir.ui.view" id="computer_store.list">
      <field name="name">product</field>
      <field name="model">product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="brand"/>
          <field name="orderdate"/>
          <field name="count"/>
          <field name="saleprice"/>
          <field name="Total"/>
        </tree>
      </field>
    </record> 

    <record id="product_view_form" model="ir.ui.view">
      <field name="name">product</field>
      <field name="model">product</field>
      <field name="arch" type="xml">
        <form string="Product">
          <sheet>
              <group>
                <field name="name"/>
                <field name="brand"/>
                <field name="cost"/>
                <field name="vendor"/>
              </group>
              <group>
                <field name="picture"/>
                <field name="count"/>
                <field name="saleprice"/>
                <field name="orderdate"/>
              </group>
              <field name="component_id" editable="top"/>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <!-- <record model="ir.actions.act_window" id="sell_action_window">
